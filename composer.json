{
    "name": "douglasgreen/pagemaker",
    "description": "A project to build webpages in OOP style with a plug-in architecture",
    "type": "library",
    "keywords": [
        "automation",
        "best practices",
        "boilerplate",
        "code quality",
        "code standards",
        "code style",
        "coding guidelines",
        "configuration",
        "development tools",
        "linting",
        "project linting",
        "project templates",
        "scaffolding",
        "setup",
        "starter kit",
        "templates"
    ],
    "homepage": "https://github.com/douglasgreen/pagemaker",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "douglasgreen/utility": "^0.5"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.0",
        "shipmonk/name-collision-detector": "^2.1",
        "symplify/easy-coding-standard": "^12.5"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PageMaker\\": "src/",
            "DouglasGreen\\PageMaker\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "detect-collisions",
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "test": "phpunit",
        "post-install-cmd": "config_setup.php",
        "post-update-cmd": "config_setup.php"
    }
}
