{
    "name": "douglasgreen/pagemaker",
    "description": "Bootstrap page maker",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94",
        "phpstan/phpstan": "^2.1.39",
        "rector/rector": "^2.3.6"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PageMaker\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.3"
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose",
            "phpstan analyse",
            "rector process --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix",
            "rector process"
        ]
    }
}
